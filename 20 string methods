/* 20 String Methods */

var stringOne = 'freeCodeCamp is the best place to learn'
var stringTwo = 'frontend and backend development'

// 1. charAt()  => Returns the character at specified position

 console.log(stringOne.charAt(1))

/* 2. charCodeAt => Returns the unicode of the character at the   specified index */

console.log(stringOne.charCodeAt(1))

/* 3. concat() => joins two or more strings and returns a new joined string */

console.log(stringOne.concat(stringTwo))


/* 4. endsWith() => checks whether a string ends with a specified string or character */

console.log(stringOne.endsWith('learn'))

/* 5. fromCharCode() => converts unicode values to characters. Its a static method of the String object */

console.log(String.fromCharCode(114))

/*6. includes() => checks whether a string includes a specified string or character  */
	console.log(stringTwo.includes("end")) 

/*7. indexOf()  => returns the position of the first found occurence of a specified value in a string   */

	console.log(stringTwo.indexOf("end"))

/*8. lastIndexOf() => returns the position of the last found occurence of a specified value in a string */

	console.log(stringTwo.lastIndexOf("end"))


/*9. match()  => searches a string against a match to a regular expression and returns an array+  */

	console.log(stringTwo.match(/end/g))


/*10. repeat()  =>   returns a new string with a repeated number of the specified string  */

	console.log(stringOne.repeat(3))

/*11. replace()  => searches a string for a specified value or regular expression and replaces it with a specified value
*/

console.log(stringTwo.replace(/end/g, "END"))

/*12. search() => searches a string for the position of the specified value and returns its index */

console.log(stringTwo.search("end"))


/*13. slice()  => Extracts a part of a string and returns a new string */

console.log(stringTwo.slice(2, 4))

/*14. split() => splits a string into an array of substrings

console.log(stringOne.split(" "))


*/

/*15. startsWith() =>  checks whether a string begins with the specified characters


*/

console.log(stringOne.startsWith("free"))


